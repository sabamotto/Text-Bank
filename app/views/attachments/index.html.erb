<p id="notice"><%= notice %></p>

<h1>アップロードされたファイル一覧</h1>

<table>
  <thead>
    <tr>
      <th>ファイル名</th>
      <th>MIME</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.name %></td>
        <td><%= attachment.mime %></td>
        <td><%= link_to 'ダウンロード', attachment %></td>
        <td><%= link_to '編集', edit_attachment_path(attachment) %></td>
        <td><%= link_to '削除', attachment, method: :delete, data: { confirm: '本当に削除してもよろしいですか。' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'アップロード', new_attachment_path %>
